      "name": "t:sections.scrolling-promotion.blocks.image.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.scrolling-promotion.blocks.image.image"
        },
        {
          "type": "range",
          "id": "image_height",
          "label": "t:sections.scrolling-promotion.blocks.image.image_height",
          "default": 120,
          "min": 0,
          "max": 200,
          "step": 2,
          "unit": "px"
        },
        {
          "type": "url",
